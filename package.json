{
  "name": "8bp-rewards",
  "version": "2.0.0",
  "description": "8 Ball Pool Rewards System - Full-stack web application with Discord integration, admin dashboard, and automated claiming",
  "main": "dist/backend/server.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "node dist/backend/server.js",
    "start:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec ts-node backend/src/server.ts",
    "dev:frontend": "cd frontend && npm start",
    "run-once": "node dist/run-once.js",
    "dev-once": "ts-node src/run-once.ts",
    "clean": "rm -rf dist && cd frontend && rm -rf build",
    "claim": "node playwright-claimer.js",
    "claim-discord": "node playwright-claimer-discord.js",
    "schedule": "node playwright-claimer.js --schedule",
    "schedule-discord": "node playwright-claimer-discord.js --schedule",
    "test-discord": "node test-discord.js",
    "test-mongodb": "node test-mongodb.js",
    "migrate-mongodb": "node scripts/migrate-to-mongodb.js",
    "setup-mongodb": "./setup-mongodb.sh",
    "bot": "node discord-bot.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "install:all": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "8ball-pool",
    "automation",
    "web-scraping",
    "puppeteer",
    "react",
    "typescript",
    "discord-bot",
    "mongodb",
    "express"
  ],
  "author": "Blake McBride",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.2.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "mongoose": "^8.18.2",
    "node-cron": "^3.0.3",
    "playwright": "^1.55.1",
    "puppeteer": "^21.5.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "winston-mongodb": "^5.1.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "axios": "^1.6.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/helmet": "^4.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-discord": "^0.1.9",
    "@types/express-session": "^1.17.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
